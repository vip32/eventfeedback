// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/

*
  box-sizing: border-box

html
  height 100%

body
  height 100%
  padding-top 60px
  //padding-bottom 40px
  // background-color #eee
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -o-user-select none
  user-select none
  background-color #E5E6DF//#EEEEEE

.content   // fix for desktop vert scroll bar
    width 500px
.container // fix for desktop vert scroll bar
    width 100%
    color #0B486B

.form-contact
  padding 15px
  margin 0 auto
  label
    font-size 16px
    font-weight normal
  .form-control
    position relative
    font-size 16px
    height auto
    padding 10px
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    &:focus
      z-index 2
  input[type="text"]
    margin-bottom -1px

.form-signin
  max-width 330px
  padding 15px
  margin 0 auto
  .checkbox
    font-weight normal
  label
    font-size 16px
    font-weight normal
  .form-control
    position relative
    font-size 16px
    height auto
    padding 10px
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    &:focus
      z-index 2
  input[type="text"]
    margin-bottom -1px
  input[type="password"]
    margin-bottom 10px

.form-signin .form-signin-heading,
.form-signin .checkbox
  margin-bottom 10px

// Remove border-radius and make it look squared

.navbar-toggle
  border-radius 0px

.btn
  border none
  border-radius 0px

.container .btn
  border-radius 3px

#menu-back
  border-radius 0px

.make-switch
  border-radius 0px

input.form-control
  border-radius 0px

.list-group-item
  border 0px
  border-bottom 3px solid #CDC6B3 //#DBDBDB
  border-radius 3px
  margin-bottom 4px
  cursor pointer
  cursor hand

.list-group-item:first-child
  border-radius 3px
  border-top-right-radius 3px
  border-top-left-radius 3px

.list-group-item:last-child
  border-radius 3px
  border-bottom-right-radius 3px
  border-bottom-left-radius 3px

.page-content
  height 97%

.page-content .container
  padding-left 0px
  padding-right 0px

.page-content .container .jumbotron
  line-height 1.5
  border-radius 0px
  padding 15px
  // line-height: 1

.badge
  border-radius 0px
  background-color #fff
  color #FA6900 //#2986b9
  border 1px solid #ddd !important

.btn-group .badge
  padding 10px

.rating-input
  font-size 35px
  cursor pointer
  cursor hand

.row
  margin-bottom 5px

.loading
  opacity 0.5

textarea
  width: 100%
  border: 0px
  border-bottom 3px solid #CDC6B3 //#DBDBDB
  border-radius 3px
  resize: none

// .page-content .container .jumbotron .list-group div:hover
//   background-color #90BFD8

// make the drawer quick

.no-transition
  -webkit-transition height 0.01s
  -moz-transition height 0.01s
  -ms-transition height 0.01s
  -o-transition height 0.01s
  transition height 0.01s

// set some button colors, from http://bootswatch.com/cosmo/
// http://pltts.me/palettes/92095
// http://pltts.me/search?utf8=%E2%9C%93&hex=%23FA6900
.btn-primary
  background-color #FA6900 // #2986b9
.btn-primary:hover
  background-color #F38630 // #3276b1
label.btn.btn-primary.badge.active
  background-color #0B486B

.btn-success
  background-color #B1D43F // #64b92a
  color #0B486B
  font-weight bold
.btn-success:hover
  background-color #E3EB37// #47a447
  color #0B486B
  font-weight bold

.btn-warning
  background-color #d7af0d
.btn-warning:hover
  background-color #ed9c28

.btn-info
  background-color #4fbeba
.btn-info:hover
  background-color #269abc

.btn-danger
  background-color #c0392b
.btn-danger:hover
  background-color #d2322d

.btn-default
  background-color #fff
  border 1px solid #ddd !important
  color #B1D43F
.btn-default:hover
  background-color #ebebeb
  border-color #adadad
  color #E3EB37

.success
  background-color #64b92a

.qr
  background url(../images/qr.png)

.nofeedback
  background-color #E2E2E2

.list-group-item strong
  font-size large

p 
  color black

@media print
  .noprint
     display none !important
